<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/eT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:background="@color/gray"
        android:layout_weight="1"
        android:inputType="textPersonName"
        android:text="0"
        android:cursorVisible="false"
        android:textSize="40pt"
        android:layout_marginBottom="1pt"
        android:gravity="right|center"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_marginBottom="1pt"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/buAC"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:text="AC"
                android:onClick="acEvent"
                android:layout_marginEnd="2pt"
                android:backgroundTint="@color/blueback"
                android:textColor="@color/black"/>

            <Button
                android:id="@+id/buPlusMinus"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:text="+/-"
                android:onClick="numberEvent"
                android:layout_marginEnd="2pt"
                android:backgroundTint="@color/blueback"
                android:textColor="@color/black"/>

            <Button
                android:id="@+id/buDivide"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:text="/"
                android:onClick="operatorEvent"
                android:layout_marginEnd="2pt"
                android:backgroundTint="@color/blueback"
                android:textColor="@color/black"/>

            <Button
                android:id="@+id/buMultiply"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:text="*"
                android:onClick="operatorEvent"
                android:backgroundTint="@color/teal_200"
                android:textColor="@color/black"/>

        </TableRow>

        <TableRow
            android:layout_marginBottom="1pt"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/bu7"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:text="7"
                android:onClick="numberEvent"
                android:layout_marginEnd="2pt"
                android:backgroundTint="@color/blueback"
                android:textColor="@color/black"/>

            <Button
                android:id="@+id/bu8"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:text="8"
                android:onClick="numberEvent"
                android:layout_marginEnd="2pt"
                android:backgroundTint="@color/blueback"
                android:textColor="@color/black"/>

            <Button
                android:id="@+id/bu9"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:text="9"
                android:onClick="numberEvent"
                android:layout_marginEnd="2pt"
                android:backgroundTint="@color/blueback"
                android:textColor="@color/black"/>

            <Button
                android:id="@+id/buPercent"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:text="%"
                android:onClick="operatorEvent"
                android:backgroundTint="@color/teal_200"
                android:textColor="@color/black"/>

        </TableRow>

        <TableRow
            android:layout_marginBottom="1pt"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/bu4"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:text="4"
                android:onClick="numberEvent"
                android:layout_marginEnd="2pt"
                android:backgroundTint="@color/blueback"
                android:textColor="@color/black"/>

            <Button
                android:id="@+id/bu5"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:text="5"
                android:onClick="numberEvent"
                android:layout_marginEnd="2pt"
                android:backgroundTint="@color/blueback"
                android:textColor="@color/black"/>

            <Button
                android:id="@+id/bu6"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:text="6"
                android:onClick="numberEvent"
                android:layout_marginEnd="2pt"
                android:backgroundTint="@color/blueback"
                android:textColor="@color/black"/>

            <Button
                android:id="@+id/buPlus"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:text="+"
                android:onClick="operatorEvent"
                android:backgroundTint="@color/teal_200"
                android:textColor="@color/black"/>

        </TableRow>

        <TableRow
            android:layout_marginBottom="1pt"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/bu1"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:text="1"
                android:onClick="numberEvent"
                android:layout_marginEnd="2pt"
                android:backgroundTint="@color/blueback"
                android:textColor="@color/black"/>

            <Button
                android:id="@+id/bu2"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:text="2"
                android:onClick="numberEvent"
                android:layout_marginEnd="2pt"
                android:backgroundTint="@color/blueback"
                android:textColor="@color/black"/>

            <Button
                android:id="@+id/bu3"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:text="3"
                android:onClick="numberEvent"
                android:layout_marginEnd="2pt"
                android:backgroundTint="@color/blueback"
                android:textColor="@color/black"/>

            <Button
                android:id="@+id/buMinus"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:text="-"
                android:onClick="operatorEvent"
                android:backgroundTint="@color/teal_200"
                android:textColor="@color/black"/>

        </TableRow>

    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bu0"
            android:layout_weight="2"
            android:layout_width="48pt"
            android:layout_height="30pt"
            android:text="0"
            android:onClick="numberEvent"
            android:layout_marginEnd="2pt"
            android:backgroundTint="@color/blueback"
            android:textColor="@color/black"/>

        <Button
            android:id="@+id/buDot"
            android:layout_weight="1"
            android:layout_width="45pt"
            android:layout_height="30pt"
            android:text="."
            android:onClick="numberEvent"
            android:layout_marginEnd="2pt"
            android:backgroundTint="@color/blueback"
            android:textColor="@color/black"/>

        <Button
            android:id="@+id/buEqual"
            android:layout_weight="1"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:text="="
            android:onClick="equalEvent"
            android:backgroundTint="@color/teal_200"
            android:textColor="@color/black"/>

    </LinearLayout>

</LinearLayout>